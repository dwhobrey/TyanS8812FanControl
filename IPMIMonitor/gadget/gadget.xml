<?xml version="1.0" encoding="utf-8" ?>
<gadget>
    <name>IPMI Monitor</name>
    <namespace>IPMIScanner</namespace>
    <version>1.0</version>
    <author name="Darren Whobrey">
    	<logo src="ipmimonitor.png"/>
    </author>
    <icons>
      <icon height="48" width="48" src="ipmimonitor.png"/>
    </icons>
    <copyright>&#169; 2013</copyright>
    <description>Shows sensor values from IPMIScanner task.</description>
    <hosts>
        <host name="sidebar">
            <base type="HTML" apiVersion="1.0" src="main.html" />
            <permissions>Full</permissions>
            <platform minPlatformVersion="1.0" />
            <defaultImage src="ipmimonitor.png"/>
        </host>
    </hosts>
</gadget>
